{
  "compilerOptions": {
    "charset": "utf-8",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "newLine": "LF",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "./dist/",
    "pretty": true,
    "target": "es2015"
  },
  "compileOnSave": true,
  // Until https://github.com/Microsoft/TypeScript/pull/5980 lands, this must be
  // filled in manually.
  "files": [
    "src/BaseBlueprint.ts",
    "src/Blueprint.ts",
    "src/cli.ts",
    "src/index.ts",
    "typings/custom/meow.d.ts",
    "typings/custom/validate-npm-package-name.d.ts",
    "typings/main.d.ts"
  ]
}
